@inherits ExampleBase
@using MudBlazor.Utilities

<MudGrid>
    <MudItem xs="12" md="6">
        <MudExColorPicker @ref="ComponentRef" @bind-Value="_color" Label="@L["Select a color"]" />
    </MudItem>
    <MudItem xs="12" md="6" Class="d-flex align-center">
        <MudPaper Style="@($"background-color: {_color}; width: 100px; height: 50px; border-radius: 8px;")" Elevation="3" />
        <MudText Class="ml-4">@_color</MudText>
    </MudItem>
</MudGrid>

@code {
    private MudColor _color = new MudColor("#1976d2");
}
