@inherits ExampleBase
@using Nextended.Core.Contracts
@using MudBlazor.Extensions.Helper

<MudExRangeSlider @ref="ComponentRef" 
                  @bind-Value="_range"
                  T="int"
                  Min="0" 
                  Max="100"
                  Color="Color.Primary" />

<MudText Typo="Typo.body2" Class="mt-2">
    @L["Range"]: @_range.Start - @_range.End
</MudText>

@code {
    private IRange<int> _range = new MudExRange<int>(20, 80);
}
