@page "/test"
@inherits BasePage

@using MudBlazor.Extensions.Core
@using MudBlazor.Extensions.Helper
@using Nextended.Core.Contracts
@inject IMudExFileService FileService

<MudExRangeSlider T="DateTime"
                  SizeRange="@(new MudExRange<DateTime>(new(2015,1,1), new(2022,12,31)))"
                  StepRange="@(new MudExRange<DateTime>(new(2021,1,1), new(2021,2,1)))" 
                  @bind-Value="_period"
                  AllowWholeRangeDrag="true" />

<MudExRangeSlider T="int"
                  SizeRange="@(new MudExRange<int>(0, 100))"
                  StepRange="@(new MudExRange<int>(0, 5))" 
                  @bind-Value="_nums" />


@code {
    private IRange<int> _nums = new MudExRange<int>(20, 60);
    private IRange<DateTime> _period = new MudExRange<DateTime>(new(2021,1,1), new(2021,12,31));
}




