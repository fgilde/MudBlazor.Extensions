@page "/no-modal"
@using MudBlazor.Extensions.Options

@attribute [Demo(Group = "Dialog Samples", Name = "Not Modal Dialogs", Documentation = "Demo for MudExTaskBar and not Modal dialogs", Order = 0, Icon = Icons.Material.Outlined.DesktopWindows, ForComponentTypes = new[] { typeof(MudExTaskBar) })]

<DemoComponent PageType="@GetType()">
    <MudButton OnClick="@ShowSampleDialogs" Variant="Variant.Filled" Color="Color.Primary">Show Sample Dialogs</MudButton>
</DemoComponent>

@code {
    
    private Task ShowSampleDialogs()
    {
        return DialogService.ShowEx<SampleDialog>($"Simple Dialog", dialog =>
        {
            dialog.ContentMessage = $"Hello from dialog";
        }, new DialogOptionsEx()
        {
            Position = (DialogPosition)Random.Shared.Next(0, 9),
            Animation = (AnimationType)Random.Shared.Next(1, 25),
            DragMode = MudDialogDragMode.Simple,
            CloseButton = true,
            MinimizeButton = true,
            Resizeable = true,
            Modal = false
        });
    }

}
