@page "/no-modal"
@inherits BasePage

@using MudBlazor.Extensions.Options

@attribute [Demo(IsPlaygroundDemo = true, Group = "Components/Dialogs", Name = "Not Modal Dialogs", Documentation = "Demo for MudExTaskBar and not Modal dialogs", Order = 40, Icon = MaterialDesignIcons.Normal.WindowRestore, ForComponentTypes = new[] { typeof(MudExTaskBar) })]

<DemoComponent PageType="@GetType()">
    <MudButton OnClick="@ShowSampleDialogs" Variant="Variant.Filled" Color="Color.Primary">@L["Show Sample Dialogs"]</MudButton>
</DemoComponent>

@code {
    
    private Task ShowSampleDialogs()
    {
        int count = 1;
        var rnd = new Random();
        foreach (var i in Enumerable.Range(1, count))
        {
            _ = DialogService.ShowExAsync<SampleDialog>($"Simple Dialog {i}", dialog => { dialog.ContentMessage = $"{L["Hello from dialog"]} {i}"; }, new DialogOptionsEx()
            {
                Position = (DialogPosition)rnd.Next(0, 9),
                Animation = (AnimationType)rnd.Next(1, 25),
                DragMode = MudDialogDragMode.Simple,
                CloseButton = true,
                MinimizeButton = true,
                Resizeable = true,
                Modal = false
            });
        }
        return Task.CompletedTask;
    }

}
