@page "/overview"
@inherits BasePage

@using MainSample.WebAssembly.Examples.Overview

@attribute [Demo(Name = "Component Overview", Documentation = "Overview of all MudBlazor.Extensions components", Order = -100, Group = "Components", Icon = Icons.Material.Outlined.Widgets)]

<!-- Header / Intro -->
<MudPaper Class="pa-6 mb-6">
    <MudText Typo="Typo.h4" GutterBottom="true">
        @L["MudBlazor.Extensions â€“ Component Overview"]
    </MudText>

    <MudText Typo="Typo.body1">
        @L["Explore the powerful components available in MudBlazor.Extensions. Each component is designed to enhance your Blazor applications with rich functionality and beautiful UI elements."]
    </MudText>

    <MudAlert Severity="Severity.Info" Class="mt-4">
        @L["Click on any demo to see the source code and try it online. Use the navigation to explore detailed documentation for each component."]
    </MudAlert>
</MudPaper>

<!-- Quick overview (Key Features) -->
<MudGrid Class="mb-6">
    <MudItem xs="12" md="4">
        <MudPaper Class="pa-4 h-100">
            <MudText Typo="Typo.subtitle1">
                <MudIcon Icon="@Icons.Material.Outlined.Extension" Class="mr-2" />@L["Extended Components"]
            </MudText>
            <MudText Typo="Typo.body2">
                @L["Powerful extensions to existing MudBlazor components with additional features and customization options."]
            </MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudPaper Class="pa-4 h-100">
            <MudText Typo="Typo.subtitle1">
                <MudIcon Icon="@Icons.Material.Outlined.Palette" Class="mr-2" />@L["Rich UI Elements"]
            </MudText>
            <MudText Typo="Typo.body2">
                @L["Beautiful UI components like gradient text, color pickers, and advanced selection controls."]
            </MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudPaper Class="pa-4 h-100">
            <MudText Typo="Typo.subtitle1">
                <MudIcon Icon="@Icons.Material.Outlined.Code" Class="mr-2" />@L["Easy to Use"]
            </MudText>
            <MudText Typo="Typo.body2">
                @L["Simple API design with familiar MudBlazor patterns. Just install and start using immediately."]
            </MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

<MudDivider Class="mb-6" />

<MudExDemoPage>

    <!-- Data Display Components -->
    <MudText Typo="Typo.h5" Class="mb-4 mt-6">
        <MudIcon Icon="@Icons.Material.Outlined.DataArray" Class="mr-2" />@L["Data Display"]
    </MudText>

    <MudExDemoBox Title="MudExGradientText"
                  NavTitle="Gradient Text"
                  Subtitle="@L["Animated gradient text for eye-catching headers"]"
                  FeaturesTitle="@L["Features"]"
                  Features="@(new[]
                            {
                                "Animated color gradients",
                                "Customizable colors and speed",
                                "Works with any typography"
                            })">
        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["Create stunning animated gradient text effects for headers and highlights."]
            </MudText>
            <OverviewGradientTextExample />
        </DemoContent>
    </MudExDemoBox>

    <MudExDemoBox Title="MudExTreeView"
                  NavTitle="Tree View"
                  Subtitle="@L["Hierarchical data visualization with multiple view modes"]"
                  FeaturesTitle="@L["Features"]"
                  Features="@(new[]
                            {
                                "Multiple view modes (Tree, List, Breadcrumb)",
                                "Async loading support",
                                "Custom item templates"
                            })">
        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["Display hierarchical data in various formats including traditional tree views, lists, and breadcrumbs."]
            </MudText>
            <OverviewTreeViewExample />
        </DemoContent>
    </MudExDemoBox>

    <!-- Selection Components -->
    <MudText Typo="Typo.h5" Class="mb-4 mt-6">
        <MudIcon Icon="@Icons.Material.Outlined.CheckBox" Class="mr-2" />@L["Selection Controls"]
    </MudText>

    <MudExDemoBox Title="MudExColorPicker"
                  NavTitle="Color Picker"
                  Subtitle="@L["Extended color picker with advanced features"]"
                  FeaturesTitle="@L["Features"]"
                  Features="@(new[]
                            {
                                "Multiple picker modes",
                                "Alpha channel support",
                                "Color palette presets"
                            })">
        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["Advanced color picker with support for different color formats and presets."]
            </MudText>
            <OverviewColorPickerExample />
        </DemoContent>
    </MudExDemoBox>

    <MudExDemoBox Title="MudExRangeSlider"
                  NavTitle="Range Slider"
                  Subtitle="@L["Select a range of values with dual thumbs"]"
                  FeaturesTitle="@L["Features"]"
                  Features="@(new[]
                            {
                                "Support for numeric and date ranges",
                                "Custom step sizes",
                                "Min/max length constraints"
                            })">
        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["Select a range of values using a slider with two thumbs for start and end values."]
            </MudText>
            <OverviewRangeSliderExample />
        </DemoContent>
    </MudExDemoBox>

    <MudExDemoBox Title="MudExEnumSelect"
                  NavTitle="Enum Select"
                  Subtitle="@L["Easy enum value selection"]"
                  FeaturesTitle="@L["Features"]"
                  Features="@(new[]
                            {
                                "Automatic enum detection",
                                "Flags enum support",
                                "Nullable enum support"
                            })">
        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["Select enum values with automatic display name formatting and flags support."]
            </MudText>
            <OverviewEnumSelectExample />
        </DemoContent>
    </MudExDemoBox>

    <MudExDemoBox Title="MudExIconPicker"
                  NavTitle="Icon Picker"
                  Subtitle="@L["Browse and select icons from Material Design"]"
                  FeaturesTitle="@L["Features"]"
                  Features="@(new[]
                            {
                                "Search and filter icons",
                                "Multiple icon sets",
                                "Preview icons"
                            })">
        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["Browse and select icons from the Material Design icon library."]
            </MudText>
            <OverviewIconPickerExample />
        </DemoContent>
    </MudExDemoBox>

    <MudExDemoBox Title="MudExChipSelect"
                  NavTitle="Chip Select"
                  Subtitle="@L["Multi-select with chip display"]"
                  FeaturesTitle="@L["Features"]"
                  Features="@(new[]
                            {
                                "Chip-based display",
                                "Flexible item source",
                                "Selection limits"
                            })">
        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["Select multiple items displayed as removable chips."]
            </MudText>
            <OverviewChipSelectExample />
        </DemoContent>
    </MudExDemoBox>

    <!-- Layout Components -->
    <MudText Typo="Typo.h5" Class="mb-4 mt-6">
        <MudIcon Icon="@Icons.Material.Outlined.Dashboard" Class="mr-2" />@L["Layout"]
    </MudText>

    <MudExDemoBox Title="MudExSplitter"
                  NavTitle="Splitter"
                  Subtitle="@L["Resizable split panels"]"
                  FeaturesTitle="@L["Features"]"
                  Features="@(new[]
                            {
                                "Horizontal and vertical splitting",
                                "Draggable dividers",
                                "Nested splits"
                            })">
        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["Create resizable split panels for flexible layouts."]
            </MudText>
            <OverviewSplitterExample />
        </DemoContent>
    </MudExDemoBox>

</MudExDemoPage>

<DemoNavigation CurrentPage="@this" />

