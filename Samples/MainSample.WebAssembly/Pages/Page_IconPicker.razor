@page "/mud-ex-icon-picker"
@inherits BasePage
@using MudBlazor.Extensions.Components.ObjectEdit.Options

@attribute [Demo(IsPlaygroundDemo = true, Group = "Components/Selection", Name = "Playground", Order = 100, Icon = Icons.Material.Outlined.Info, Documentation = "Interactive playground for MudExIconPicker", ForComponentType = typeof(MudExIconPicker))]

<DemoComponent PageType="@GetType()" >
    <SplitContainer>
        <Left>
            <MudExIconPicker @ref="component" PickerVariant="PickerVariant.Inline" Value="" Label="Icon" />
        </Left>
        <Right>
            <ComponentPropertyGrid MetaConfiguration="@Configure()" Value="@component"></ComponentPropertyGrid>
        </Right>
    </SplitContainer>
</DemoComponent>


@code {
    MudExIconPicker component;
    private Action<ObjectEditMeta<MudExIconPicker>> Configure()
    {
        return meta =>
        {
            meta.Property(m => m.Localizer).Ignore();
            meta.Property(m => m.Color).WithAdditionalAttribute(nameof(MudColorPicker.ShowAlpha), false, true);
            meta.IgnoreAllReadOnlyFields();
        };
    }

}