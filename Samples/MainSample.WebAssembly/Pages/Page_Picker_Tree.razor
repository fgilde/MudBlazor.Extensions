@page "/mud-ex-picker-tree-sample"
@inherits BasePage

@using MainSample.WebAssembly.Examples.Tree

@attribute [DemoNew(IsPlaygroundDemo = true, Name = "MudExPicker Tree", Order = 8, Icon = Icons.Material.Outlined.ArrowDropDown, Documentation = "This sample shows how to combine the MudExPicker with MudExTreeView to build a tree picker", ForComponentTypes = new[] { typeof(MudExPicker), typeof(MudExTreeView<>) })]
@attribute [DemoNew(IsPlaygroundDemo = true, Group = "TreeView", Name = "Treeview in Picker", Order = 8, Icon = Icons.Material.Outlined.ArrowDropDown, Documentation = "This sample shows how to combine the MudExPicker with MudExTreeView to build a tree picker", ForComponentTypes = new[] { typeof(MudExPicker), typeof(MudExTreeView<>) })]

<MudExDemoPage>

    <MudExDemoBox Title="Tree view in picker"
                  NavTitle="Tree picker"
                  FeaturesTitle="Configuration"
                  Features="@(new[]
                            {
                                "Combine MudExPicker with MudExTreeView",
                                "Dropdown tree selection",
                                "AllowSelectionOfNonEmptyNodes support",
                                "Auto-close on selection"
                            })">

        <DemoContent>
            <MudText Typo="Typo.body2" Class="mb-4">
                @L["This example demonstrates how to combine MudExPicker with MudExTreeView to create a powerful tree picker component. Users can select items from a hierarchical structure in a dropdown format."]
            </MudText>
            <TreeViewPickerExample/>
        </DemoContent>
    </MudExDemoBox>

</MudExDemoPage>

<DemoNavigation CurrentPage="@this" />

