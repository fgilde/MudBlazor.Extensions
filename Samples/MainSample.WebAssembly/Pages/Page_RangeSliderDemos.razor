@page "/range-slider-demos"
@inherits BasePage
@using MudBlazor
@using MudBlazor.Extensions.Helper
@using Nextended.Core.Contracts
@using Nextended.Core.Types

@attribute [DemoNew(Name = "Samoes", Order = 0, Group = "RangeSlider", ForComponentTypes = new[] { typeof(MudExRangeSlider<>) })]


<MudContainer MaxWidth="MaxWidth.False" Class="mt-6 mb-8">
    <MudExDemoPage>
    <MudExDemoBox
        Title="@L["Basic numeric range"]"
        Subtitle="@L["Simple range from 0 to 100 with steps of 5."]"
        RunText="@L["Run"]"
        ShowCodeText="@L["Show code"]"
        HideCodeText="@L["Hide code"]"
        EditInstanceText="@L["Edit instance"]"
        FeaturesTitle="@L["Key features"]"
        FeaturesDescription="@L["Good starting point for numeric ranges."]"
        Features="@(new[] { L["Range from 0–100"].Value, L["Step size: 5"], L["Two-way binding with @bind-Value"] })"
        Code="@NumericRangeCode">

        <DemoContent>
            <MudExRangeSlider T="int"
                              SizeRange="@(new MudExRange<int>(0, 100))"
                              StepLength="@(new RangeLength<int>(5))"
                              @bind-Value="_nums" />
        </DemoContent>

    </MudExDemoBox>

    <MudExDemoBox
        Title="@L["Timeline with custom templates"]"
        Subtitle="@L["Custom track and selection templates for a time-based range."]"
        FeaturesTitle="@L["Highlights"]"
        Features="@(new[] { L["Custom TrackTemplate for year and month markers"].Value, L["SelectionTemplate with formatted period"], L["Perfect basis for timeline sliders"] })"
        Code="@TimelineCode">

        <DemoContent>
            @* Dein Timeline-RangeSlider hier *@
        </DemoContent>

    </MudExDemoBox>
    
    
    <MudExDemoBox
        Title="@L["Timeline with custom templatesXX d"]"
        Subtitle="@L["Custom track and selection templates for a time-based range."]"
        FeaturesTitle="@L["Highlights"]"
        Features="@(new[] { L["Custom TrackTemplate for year and month markers"].Value, L["SelectionTemplate with formatted period"], L["Perfect basis for timeline sliders"] })"
        Code="@TimelineCode">

        <DemoContent>
            @* Dein Timeline-RangeSlider hier *@
        </DemoContent>

    </MudExDemoBox>
    
    
    
    <MudExDemoBox
        Title="@L["Timeline with custom templates23"]"
        Subtitle="@L["Custom track and selection templates for a time-based range."]"
        FeaturesTitle="@L["Highlights"]"
        Features="@(new[] { L["Custom TrackTemplate for year and month markers"].Value, L["SelectionTemplate with formatted period"], L["Perfect basis for timeline sliders"] })"
        Code="@TimelineCode">

        <DemoContent>
            @* Dein Timeline-RangeSlider hier *@
        </DemoContent>

    </MudExDemoBox>
    
    
    <MudExDemoBox
        Title="@L["Timeline with custom templates1"]"
        Subtitle="@L["Custom track and selection templates for a time-based range."]"
        FeaturesTitle="@L["Highlights"]"
        Features="@(new[] { L["Custom TrackTemplate for year and month markers"].Value, L["SelectionTemplate with formatted period"], L["Perfect basis for timeline sliders"] })"
        Code="@TimelineCode">

        <DemoContent>
            @* Dein Timeline-RangeSlider hier *@
        </DemoContent>

    </MudExDemoBox>
    

    </MudExDemoPage>
</MudContainer>

@code {
    private IRange<int> _nums = new MudExRange<int>(20, 60);

    private string NumericRangeCode = "sdsdds";
    private string TimelineCode = "ddasasassd";

}
