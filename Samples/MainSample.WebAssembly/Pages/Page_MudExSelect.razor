@page "/mud-ex-select"
@using MudBlazor.Extensions.Options

@attribute [DemoNew(Name = "MudExSelect", Icon = Icons.Material.Outlined.ArrowDropDownCircle, Documentation = "MudExSelect can used to select one ore more items from a bindeable collection. Also this component supports all animations like dialogs or MudExPopover.", ForComponentType = typeof(MudExSelect<>))]


<DemoComponent PageType="@GetType()">
    <MudText Class="mb-5" Typo="Typo.subtitle1">Use can use grouping directly for your binded itemscollection just set the GroupBy function and enable grouping. In this demo its grouped by state if you set GroupingEnabled to true </MudText>

    <SplitContainer>
        <Left>
            <MudGrid>
                <MudItem xs="12" sm="8" Class="d-flex align-start justify-center">
                    <MudExSelect @ref="component"
                                 @bind-SelectedValues="@_selected"
                                 MultiSelection="true"
                                 SelectAll="true"
                                 GroupBy="@(x => x.State)"
                                 PopoverAnimation="AnimationType.Pulse"
                                 ToStringFunc="@(x => x.Name + " - " + x.PostalCode)"
                                 ItemCollection="_samples" SearchBox="true" T="City" Label="Cities you want to live" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Outlined">
                        <ItemTemplate>
                            <MudAlert>@context?.Name</MudAlert>
                        </ItemTemplate>
                    </MudExSelect>
                </MudItem>
            </MudGrid>
        </Left>
        <Right>
            <ComponentPropertyGrid Value="@component"></ComponentPropertyGrid>
        </Right>
    </SplitContainer>
</DemoComponent>


