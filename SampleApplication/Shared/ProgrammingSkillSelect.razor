@using System.Threading
@using SampleApplication.Client.Pages
@inherits MudExChipSelect<SampleApplication.Client.Pages.Page_ObjectEditConfigured.ProgramingSkill>

@Inherited()

@code {
    public override string Label { get; set; } = "Programming skills";
    public override string HelperText { get; set; } = null;
    protected RenderFragment Inherited() => builder => base.BuildRenderTree(builder);
    
    protected override Task<IList<Page_ObjectEditConfigured.ProgramingSkill>> GetAvailableItemsAsync(CancellationToken cancellation = default)
    {
        return Task.FromResult<IList<Page_ObjectEditConfigured.ProgramingSkill>>(new List<Page_ObjectEditConfigured.ProgramingSkill>
        {
            new() { Name = "C#"},
            new() { Name = "C++"},
            new() { Name = "C"},
            new() { Name = "Objective-C"},
            new() { Name = "Swift"},
            new() { Name = "TypeScript"},
            new() { Name = "JavaScript"},
            new() { Name = "VisualBasic"},
            new() { Name = "Pascal"}
        });
    }

    public override string ItemNameRender(Page_ObjectEditConfigured.ProgramingSkill item) => item?.Name;
}