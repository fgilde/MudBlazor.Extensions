@inherits MudExJsRequiredBaseComponent<MudExDropBoxFilePicker>

@if (IsReady && !IsLoading)
{
    <MudButton Variant="@Variant"
               Color="@Color"
               Size="@Size"
               StartIcon="@StartIcon" OnClick="@Pick">
        @ChildContent
    </MudButton>
}
else
{
    <MudProgressCircular Size="@Size" Color="@Color" Indeterminate="true" />
}
