@inherits MudExBaseComponent<MudExGrid>
<div @attributes="UserAttributes" class="@GetClass()" style="@GetStyle()"
     @onclick="OnClickHandler"
     @onclick:stopPropagation="OnClickStopPropagation"
     @oncontextmenu="OnContextMenu"
     @oncontextmenu:preventDefault="OnContextMenuPreventDefault"
     @oncontextmenu:stopPropagation="OnContextMenuStopPropagation"
     @ref="GridElement">
    <CascadingValue Value="@this" IsFixed="true">@ChildContent</CascadingValue>
    <div class="mud-ex-grid-overlay" aria-hidden="true"></div>
    <div class="mud-ex-grid-placeholder" aria-hidden="true"></div>
</div>