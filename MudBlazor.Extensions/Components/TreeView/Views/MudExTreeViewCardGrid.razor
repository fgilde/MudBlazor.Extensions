    public virtual RenderFragment RenderItem(TreeViewItemContext<T> context)
    {
        return @<MudCard Class="@ItemClassStr(context)" Style="@ItemStyleStr(context)" @onclick="@(() => { NodeClick(context.Item); })">
        <MudCardHeader>
            <CardHeaderContent>
                @RenderItemContent(context, true, false)
            </CardHeaderContent>
            <CardHeaderActions>

            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            @RenderItemContent(context, true, true)
        </MudCardContent>
    </MudCard>;
