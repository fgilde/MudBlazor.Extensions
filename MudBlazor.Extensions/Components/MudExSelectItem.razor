@typeparam T
@inherits MudBaseSelectItem

@if (HideContent == false)
{
    <MudExListItem @ref="@ListItem" @attributes="UserAttributes" T="T" Value="@Value" Text="@Text" id="@ItemId" OnClick="@HandleOnClick" IsFunctional="@IsFunctional" Href="@Href" Disabled="@GetDisabledStatus()" Class="@Class" Style="@Style">
        @if (ChildContent != null && MudExSelect?.ItemCollection == null)
        {
            @ChildContent
        }
        else
        {
            @DisplayString
        }
    </MudExListItem>
}